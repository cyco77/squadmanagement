<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field
			name="id"
			type="hidden"		/>
    <field
			name="awarddate"
			type="calendar"
       format="%Y-%m-%d" 
      filter="user_utc"
			label="COM_SQUADMANAGEMENT_FIELD_AWARD_AWARDDATE_LABEL"
			description="COM_SQUADMANAGEMENT_FIELD_AWARD_AWARDDATE_DESC"
			size="40"
			class="inputbox"
			required="true"		/>
    <field
			name="name"
			type="text"
			label="COM_SQUADMANAGEMENT_FIELD_AWARD_NAME_LABEL"
			description="COM_SQUADMANAGEMENT_FIELD_AWARD_NAME_DESC"
			size="40"
			class="inputbox"
			required="true"		/>
    <field
			name="squadid"
			type="squad"
			label="COM_SQUADMANAGEMENT_FIELD_AWARD_SQUAD_LABEL"
			description="COM_SQUADMANAGEMENT_FIELD_AWARD_SQUAD_DESC"
			size="5"
			class="inputbox"
			required="true"		/>
    <field
			name="place"
			type="number"
			label="COM_SQUADMANAGEMENT_FIELD_AWARD_PLACE_LABEL"
			description="COM_SQUADMANAGEMENT_FIELD_AWARD_PLACE_DESC"
			size="5"
			class="inputbox"
			required="false"		/>
    <field
		name="imageurl"
		type="media"
		directory="squadmanagement/awards"
		label="COM_SQUADMANAGEMENT_FIELD_AWARD_IMAGE_LABEL"
		description="COM_SQUADMANAGEMENT_FIELD_AWARD_IMAGE_DESC"  />
    <field
			name="url"
			type="text"
			label="COM_SQUADMANAGEMENT_FIELD_AWARD_URL_LABEL"
			description="COM_SQUADMANAGEMENT_FIELD_AWARD_url_DESC"
			size="40"
			class="inputbox"
			required="false"
		/>
    <field
     name="description"
     type="editor"
     label="COM_SQUADMANAGEMENT_FIELD_AWARD_DESCRIPTION_LABEL"
     description="COM_SQUADMANAGEMENT_FIELD_AWARD_DESCRIPTION_DESC"
   class="inputbox"
   filter="JComponentHelper::filterText"
   buttons="true"
   hide="readmore,pagebreak"	/>
    <field id="published"
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1"		>
      <option value="1">
        JPUBLISHED
      </option>
      <option value="0">
        JUNPUBLISHED
      </option>
    </field>
    <field
      name="ordering"
      type="hidden"/>
  </fieldset>
</form>
