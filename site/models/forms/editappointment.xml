<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset addfieldpath="/administrator/components/com_squadmanagement/models/fields">
    <field
			name="id"
			type="hidden"
		/>
    <field
			name="squadid"
			type="squad"
			label="COM_SQUADMANAGEMENT_APPOINTMENT_SQUAD_LABEL"
			description="COM_SQUADMANAGEMENT_APPOINTMENT_SQUAD_DESC"
			size="1"
			class="inputbox"
			required="true"
		/>
    <field
			name="subject"
			type="text"
			label="COM_SQUADMANAGEMENT_APPOINTMENT_SUBJECT_LABEL"
			description="COM_SQUADMANAGEMENT_APPOINTMENT_SUBJECT_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
	<field
			name="body"
			type="editor"
			label="COM_SQUADMANAGEMENT_APPOINTMENT_BODY_LABEL"
			description="COM_SQUADMANAGEMENT_APPOINTMENT_BODY_DESC"
		    class="inputbox"
		    filter="JComponentHelper::filterText"
		    buttons="true"
		    hide="readmore,pagebreak"	/>
    <field
			name="type"
			type="appointmenttype"
			label="COM_SQUADMANAGEMENT_APPOINTMENT_TYPE_LABEL"
			description="COM_SQUADMANAGEMENT_APPOINTMENT_TYPE_DESC"
			size="1"
			class="inputbox"
			required="true"
		/>		
    <field
			name="startdatetime"
			type="calendar"
			format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc"
			label="COM_SQUADMANAGEMENT_APPOINTMENT_STARTDATETIME_LABEL"
			description="COM_SQUADMANAGEMENT_APPOINTMENT_STARTDATETIME_DESC"
			size="20"
			class="inputbox"
			required="true"
		/>	
    <field
			name="enddatetime"
			type="calendar"
			format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc"
			label="COM_SQUADMANAGEMENT_APPOINTMENT_ENDDATETIME_LABEL"
			description="COM_SQUADMANAGEMENT_APPOINTMENT_ENDDATETIME_DESC"
			size="20"
			class="inputbox"
			required="false"
		/>		
    <field
			name="duration"
			type="text"
			label="COM_SQUADMANAGEMENT_APPOINTMENT_DURATION_LABEL"
			description="COM_SQUADMANAGEMENT_APPOINTMENT_DURATION_DESC"
			size="40"
			class="inputbox"
			default=""
			required="false"
		/>			
			
    <field id="published"
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1"
		>
      <option value="1">
        JPUBLISHED
      </option>
      <option value="0">
        JUNPUBLISHED
      </option>
    </field>
    <field
      name="ordering"
      type="hidden"
		    />
  </fieldset>
</form>
