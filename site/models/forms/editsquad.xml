<form>
  <fieldset addfieldpath="/administrator/components/com_squadmanagement/models/fields">
    <field
			name="id"
			type="hidden"
		/>
    <field
			name="shortname"
			type="text"
			label="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_SHORTNAME_LABEL"
			description="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_SHORTNAME_DESC"
			size="20"
			class="inputbox"
			default=""
		/>
    <field
			name="name"
			type="text"
			label="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_NAME_LABEL"
			description="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_NAME_DESC"
			size="40"
			class="inputbox"
			default=""
      required="true"
		/>
    <field
     name="waradmin"
     type="squadmember"
     label="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_WARADMIN_LABEL"
     description="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_WARADMIN_DESC"
     size="1"
     class="inputbox"
     required="false"
		/>
    <field
        name="icon"
        type="media"
        directory="squadmanagement/icons"
        label="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_ICON_LABEL"
        description="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_ICON_DESC"
        preview="true"/>
    <field
				name="image"
				type="media"
				directory="squadmanagement/logos"
				label="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_IMAGE_LABEL"
				description="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_IMAGE_DESC"
        preview="true"/>
    <field
        name="description"
        type="editor"
        label="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_DESCRIPTION_LABEL"
        description="COM_SQUADMANAGEMENT_FIELD_EDITSQUAD_DESCRIPTION_DESC"
        class="inputbox"
        filter="JComponentHelper::filterText"
        buttons="true"
        hide="readmore,pagebreak"	/>
    <field
      name="ordering"
      type="hidden"
		    />
  </fieldset>
</form>
