<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade" >
  <name>SquadManagement! NextWar Module</name>
  <author>Lars Hildebrandt</author>
  <creationDate>11.09.2013</creationDate>
  <copyright>Lars Hildebrandt</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>info@larshildebrandt.de</authorEmail>
  <authorUrl>www.larshildebrandt.de</authorUrl>
  <version>2.0</version>
  <description>Module to display the upcoming wars</description>
  <languages>
    <language tag="de-DE">language/de-DE.mod_squadmanagement_nextwar.ini</language>
	<language tag="de-DE">language/de-DE.mod_squadmanagement_nextwar.sys.ini</language>
	<language tag="en-GB">language/en-GB.mod_squadmanagement_nextwar.ini</language>
	<language tag="en-GB">language/en-GB.mod_squadmanagement_nextwar.sys.ini</language>
  </languages>
  <files>
    <filename module="mod_squadmanagement_nextwar">mod_squadmanagement_nextwar.php</filename>
    <filename module="mod_squadmanagement_nextwar">index.html</filename>
    <filename module="mod_squadmanagement_nextwar">tmpl/default.php</filename>
    <filename module="mod_squadmanagement_nextwar">tmpl/index.html</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="cachemode"
          type="hidden"
          default="itemid">
          <option value="itemid"></option>
        </field>
              </fieldset>
		<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>	  
    </fields>
  </config>
</extension>
